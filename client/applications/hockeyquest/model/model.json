"state_descriptions" : {

    "state_group" : {

        "name"      : "daily_states",
        "eval"      : "day_changed",

        "location" : {
            "def"           : "home->away->",
            "probability"   : "0.5",
            },

        "gametoday" : {
            "def"           : "yes->no->",
            "probability"   : "0.5",
            "conditions" : { "in_season" : "yes" }
        },

        "practicetoday" : {
            "def"           : "yes->no->",
            "probability"   : "0.5",
            "conditions" : { "gametoday" : "no", "location" : "home" }
        }
    }
}

"sets" : {
    "game_hours"    : [17,18,19],
    "game_minutes"  : [0,30],
    "practice_hours"    : [17,18,19],
    "practice_minutes"  : [0,30]
}

"schedule_items" : {

    "game"  : {
        "probability"   : "1",
        "conditions"    : { "gametoday" : "yes" },
        "hour_start"    : "random::game_hours",
        "minute_start"  : "random::game_minutes",
    } 

    "practice"  : {
        "probability"   : "1",
        "conditions"    : { "practicetoday" : "yes" },
        "hour_start"    : "random::practice_hours",
        "minute_start"  : "random::practice_minutes",
    } 

}

"locations" : {

    "home" : {
            "links" : [ { ["gym", "{{home_city.park}}" ],                                       "when" : "always" },
                        { ["realtor","petshop","car_dealership","{{home_city.resteraunt}}"],    "when" : "business_hours" },
                        { ["sports_bar","dance_club"],                                          "when" : "evening_hours" } ]
